{
	"manifest_version": 2,
	"name": "LinkHay QuickView",
	"version": "1.1.0.1",
	"description": "Cho ph√©p xem nhanh trong LinkHay.com",
	"icons": {"192": "icon.png"},
	"permissions": [
		"tabs", "*://*/*"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "LinkHay QuickView",
		"default_popup": "popup.html"
	},
	"content_scripts":
	[
		{
			"matches": ["*://*.linkhay.com/*"],
			"js": [
				"jquery-3.2.1.min.js",
				"pageInfo.js",
				"util.js",
				"sites.js",
				"preview.js",
				"clean.js",
				"improve.js",
				"linkhay.js"
			],
			"run_at" : "document_end"
		}
	]
}
